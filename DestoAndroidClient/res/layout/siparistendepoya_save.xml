<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/siparistenDepoyaProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/depoyaMarkaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marka "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/depoyaUruntipTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ürün çeşidi "
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/stok_yeriTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stok Yeri: "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Spinner
            android:id="@+id/stok_yeriSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:drawSelectorOnTop="true" >
        </Spinner>
    </LinearLayout>

    <TextView
        android:id="@+id/depoyaModelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Model "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/depoyaSiparisAdetLabTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sipariş Adedi: "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/depoyaSiparisAdetTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Sipariş Adedi: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/destoRed" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/depoyaGirenAdetLabTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Depoya Giren Adet: "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <NumberPicker
            android:id="@+id/depoyaGirenAdetPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal" >
        </NumberPicker>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/vazgecButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vazgeç" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Depoya Kaydet" />
    </LinearLayout>

</LinearLayout>
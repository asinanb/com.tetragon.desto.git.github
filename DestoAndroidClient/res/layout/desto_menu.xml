<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="2dp"
    android:background="@color/destoLightBlue"
    tools:context="com.tetragon.desto.DestoActivity" >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/light_grey"
        android:layout_marginBottom="2dp"
        android:columnCount="2" >

        <ImageView
            android:id="@+id/satisView"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_row="0"
            android:background="@color/white"
            android:src="@drawable/img_satis_link" />

        <ImageView
            android:id="@+id/stokView"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_row="0"
            android:background="@color/white"
            android:src="@drawable/img_stok_link" />

        <ImageView
            android:id="@+id/depoView"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_row="1"
            android:background="@color/white"
            android:src="@drawable/img_depo_link" />

        <ImageView
            android:id="@+id/dbView"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_row="1"
            android:background="@color/white"
            android:src="@drawable/ic_db_link" />
        <ImageView
            android:id="@+id/siparisView"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_row="2"
            android:background="@color/white"
            android:src="@drawable/img_siparis_link" />

        <ImageView
            android:id="@+id/testView"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_row="2"
            android:background="@color/white"
            android:src="@drawable/img_test" />
    </GridLayout>

</ScrollView>
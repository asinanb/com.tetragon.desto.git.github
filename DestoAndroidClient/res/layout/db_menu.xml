<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

<ScrollView
    android:id="@+id/dbscroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="2dp"
    android:background="@color/destoBeige"
    tools:context="com.tetragon.desto.DbMenuActivity" >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="2dp"
        android:background="@color/destoGreen"
        android:columnCount="2"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/markalarView"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_row="0"
            android:background="@color/white"
            android:src="@drawable/markalar_link" />

        <ImageView
            android:id="@+id/urungrubuView"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_column="1"
            android:layout_gravity="fill_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_row="0"
            android:background="@color/white"
            android:src="@drawable/urungrubu_link" />

        <ImageView
            android:id="@+id/urunlerView"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/white"
            android:layout_row="1"
            android:src="@drawable/urunler_link1" />

        <ImageView
            android:id="@+id/modellerView"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_row="1"
            android:background="@color/white"
            android:src="@drawable/modeller_link" />
        <ImageView
            android:id="@+id/stok_yeriView"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_row="2"
            android:background="@color/white"
            android:src="@drawable/stok_yeri_link" />
        
        <ImageView
            android:id="@+id/musteriView"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_row="2"
            android:background="@color/white"
            android:src="@drawable/musteri_link" />

    </GridLayout>

</ScrollView>
</RelativeLayout>
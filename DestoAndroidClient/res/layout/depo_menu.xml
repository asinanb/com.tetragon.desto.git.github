<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<ScrollView 
    android:id="@+id/dbscroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="2dp"
    tools:context="com.tetragon.desto.DbMenuActivity" >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/blue"
        android:columnCount="2"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/depoUrunGirisView"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_row="0"
            android:background="@color/white"
            android:src="@drawable/dburungir_link" />

        <ImageView
            android:id="@+id/depoUrunCikisView"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_column="1"
            android:layout_gravity="fill_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_row="0"
            android:background="@color/white"
            android:src="@drawable/depouruncik_link" />

        <ImageView
            android:id="@+id/depoRaporView"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_row="1"
            android:background="@color/white"
            android:src="@drawable/deporapor_link" />

        <ImageView
            android:id="@+id/depoUrunListView"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_column="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_row="1"
            android:background="@color/white"
            android:src="@drawable/depoara_link" />
        </GridLayout>

</ScrollView>
</RelativeLayout>
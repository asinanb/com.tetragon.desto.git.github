<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/satisPageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:gravity="end" >

    <ListView
        android:id="@+id/satisListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/satisInfoView" >
    </ListView>

    <LinearLayout
        android:id="@+id/satisInfoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/destoBlue" />

        <RelativeLayout
            android:id="@+id/musteriLayoutView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/layoutColorLight" >

            <LinearLayout
                android:id="@+id/musteriASALayoutView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/musteriButton1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/musteriASView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/BoldText" />

                <TextView
                    android:id="@+id/musteriAdresView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/DarkText" />

            </LinearLayout>

            <Button
                android:id="@+id/musteriButton1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Müşteri..."  
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/destoBlue" />

        <RelativeLayout
            android:id="@+id/ozetLayoutView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/toplamOzetLayoutView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/listeFiyatiToplamOzetView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/LightText" />

                <TextView
                    android:id="@+id/toplamFiyatOzetView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/DarkText" />
            </LinearLayout>

            <TextView
                android:id="@+id/satisOzetiTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:textAppearance="@style/DarkText" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/musteriLayoutView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/musteriTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:minWidth="180dp"
                android:textAppearance="@style/BoldText" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/musteriLayoutView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/musteriAdresTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:minWidth="180dp"
                android:textAppearance="@style/BoldText" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/destoBlue" />

        <Button
            android:id="@+id/satisButton"
            style="?android:attr/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sat_yap" />
    </LinearLayout>

</RelativeLayout>
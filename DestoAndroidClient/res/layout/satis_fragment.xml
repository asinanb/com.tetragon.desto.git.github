<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/satisPageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:gravity="end" >

    <ListView
        android:id="@+id/satisListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/satisHesapView" >
    </ListView>

    <LinearLayout
        android:id="@+id/satisHesapView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/destoBlue" />

        <RelativeLayout
            android:id="@+id/satisHesapRowView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/toplam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/toplamFiyatView"
                android:text="Toplam : "
                android:textAppearance="@style/BoldText" />

            <EditText
                android:id="@+id/toplamFiyatView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:hint="Toplam fiyat"
                android:inputType="number"
                android:minWidth="180dp"
                android:textAppearance="@style/BoldText" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/satisHesapRowView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/nakitCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/nakitFiyatView"
                android:text="Nakit : " />

            <EditText
                android:id="@+id/nakitFiyatView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:hint="Nakit alinan"
                android:inputType="number"
                android:minWidth="180dp"
                android:textAppearance="@style/BoldText" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/satisHesapRowView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/kkartiCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/kkartiView"
                android:text="Kredi Kartı : " />

            <EditText
                android:id="@+id/kkartiView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:hint="Kredi kartı"
                android:inputType="number"
                android:minWidth="180dp"
                android:textAppearance="@style/BoldText" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/satisHesapRowView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/taksitSayisiCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/taksitSayisiView"
                android:text="Taksit Sayısı : " />

            <EditText
                android:id="@+id/taksitSayisiView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:hint="Taksit Sayisi"
                android:inputType="number"
                android:minWidth="180dp"
                android:textAppearance="@style/BoldText" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/satisHesapRowView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/taksitTlCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/taksitTlView"
                android:text="Taksitler : " />

            <EditText
                android:id="@+id/taksitTlView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:hint="Taksit Tl"
                android:inputType="number"
                android:minWidth="180dp"
                android:textAppearance="@style/BoldText" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hesaplaLayoutView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/hesaplaButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:minWidth="180dp"
                android:text="Hesapla"
                android:textAppearance="@style/BoldText" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ozetLayoutView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/toplamOzetLayoutView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/listeFiyatiToplamOzetView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/toplamFiyatOzetView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/satisOzetiTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:textAppearance="@style/SignatureText" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/destoBlue" />

        <Button
            android:id="@+id/satisButton"
            style="?android:attr/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Satışı Tamamla" />
    </LinearLayout>

</RelativeLayout>